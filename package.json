{
  "name": "@dialogue-foundry/workspace",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "dev:backend": "turbo dev --filter=@dialogue-foundry/backend",
    "dev:frontend": "turbo dev --filter=@dialogue-foundry/frontend",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "update-eslint": "turbo run lint --filter=@dialogue-foundry/eslint-config",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "publish-package": "echo \"$AWS_ACCESS_KEY_ID\" \"$AWS_SECRET_ACCESS_KEY\" && export AWS_ACCESS_KEY_ID=\"$AWS_ACCESS_KEY_ID\" && export AWS_SECRET_ACCESS_KEY=\"$AWS_SECRET_ACCESS_KEY\" && turbo run publish-package"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.25.9",
    "@changesets/cli": "^2.28.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "turbo": "^2.4.4",
    "typescript": "~5.3.3"
  },
  "packageManager": "pnpm@9.4.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}