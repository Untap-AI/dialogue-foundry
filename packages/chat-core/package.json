{
  "name": "@dialogue-foundry/chat-core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "rm -rf ./dist/* && pnpm build-types && pnpm build-esm && pnpm build-cjs",
    "build-types": "npx tsc --declaration --emitDeclarationOnly --outDir ./dist -p ./tsconfig.json",
    "build-esm": "esbuild ./src --platform=node --bundle --minify --target=es2022 --format=esm --sourcemap=external --packages=external --outfile=./dist/index.mjs",
    "build-cjs": "esbuild ./src --platform=node --bundle --minify --target=es2022 --format=cjs --sourcemap=external --packages=external --outfile=./dist/index.cjs",
    "dev": "npx tsc --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nlux/react": "^2",
    "@nlux/themes": "^2",
    "axios": "^1.8.4"
  },
  "devDependencies": {
    "@crossingminds/tsconfig": "^0.2.0",
    "@dialogue-foundry/eslint-config": "workspace:*",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "esbuild": "^0.17.5",
    "eslint": "^8.57.1",
    "tsc": "^2.0.4",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}